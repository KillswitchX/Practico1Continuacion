<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Canje"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark"

        >
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#000"
            android:minHeight="60dp"
            android:layout_gravity="center"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Puntaje ="
                android:textSize="35sp"
                android:id="@+id/puntaje_canje"
                />


        </android.support.v7.widget.CardView>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#FFF"
            android:text="Aquì puedes canjear tus puntos ganados hasta ahora por còdigos redimibles por premios"
            android:gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elija el premio a canjear:"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20dp"
            />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/rg_canje"

            >

            <RadioButton
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lapicero -> 20 puntos"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="22sp"
                android:id="@+id/rb_opcion1_canje"
                />
            <RadioButton
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuaderno -> 30 puntos"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="22sp"
                android:id="@+id/rb_opcion2_canje"
                />
            <RadioButton
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Libreta -> 40 puntos"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="22sp"
                android:id="@+id/rb_opcion3_canje"
                />
            <RadioButton
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camiseta -> 80 puntos"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="22sp"
                android:id="@+id/rb_opcion4_canje"
                />
            <RadioButton
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saco -> 100 puntos"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="22sp"
                android:id="@+id/rb_opcion5_canje"
                />




        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            >
            <Button

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20sp"
                android:text="   Volver  "
                android:background="@drawable/rounded"
                android:textColor="#FFF"
                android:id="@+id/btn_volver_canje"
                />

            <Button
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20sp"
                android:text=" Canjear "
                android:background="@drawable/rounded"
                android:textColor="#FFF"
                android:id="@+id/btn_canjear"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Còdigo: "
            />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Còdigo de canjeo en tienda icesi"
                android:id="@+id/et_codigoCanjeo"
                />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>