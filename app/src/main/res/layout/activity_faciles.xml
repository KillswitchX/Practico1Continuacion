<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Preguntas"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark"

        >
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#000"
            android:minHeight="60dp"
            android:layout_gravity="center"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Puntaje ="
                android:textSize="35sp"
                android:id="@+id/puntaje_facil"
                />


        </android.support.v7.widget.CardView>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#FFF"
            android:text="Preguntas Fàciles, cada una vale 5 puntos"
            android:gravity="center"
            />

        <EditText
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:textColor="#FFF"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="5*5"
            android:id="@+id/et_preguntaFacil"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elija la opciòn correcta:"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20dp"
            />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/rg_faciles"

            >

            <RadioButton
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opciòn 1"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="22sp"
                android:id="@+id/rb_opcion1_Facil"
                />
            <RadioButton
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opciòn 2"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="22sp"
                android:id="@+id/rb_opcion2_Facil"
                />
            <RadioButton
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opciòn 3"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="22sp"
                android:id="@+id/rb_opcion3_Facil"
                />
            <RadioButton
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opciòn 4"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="22sp"
                android:id="@+id/rb_opcion4_Facil"
                />




        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            >
            <Button

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20sp"
                android:text="   Volver  "
                android:background="@drawable/rounded"
                android:textColor="#FFF"
                android:id="@+id/btn_volver_facil"
                />

            <Button
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20sp"
                android:text=" Aceptar "
                android:background="@drawable/rounded"
                android:textColor="#FFF"
                android:id="@+id/btn_aceptar_facil"
                />



        </LinearLayout>


    </LinearLayout>


</LinearLayout>