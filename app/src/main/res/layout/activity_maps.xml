<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">




<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#000"
        android:backgroundTint="#000"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#000"
            android:minHeight="60dp"
            android:layout_gravity="center"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Puntaje ="
                android:textSize="35sp"
                android:id="@+id/puntaje_Global"
                />

        </android.support.v7.widget.CardView>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:foregroundGravity="center"
        android:layout_marginBottom="25dp"
        android:orientation="horizontal"
        >

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAlignBottom="true"
            android:foregroundGravity="bottom"
            android:src="@drawable/questions"
            android:backgroundTint="#FF0000"
            android:id="@+id/btn_preguntasDificles"
            app:maxImageSize="40dp"
            />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAlignBottom="true"
            android:foregroundGravity="bottom"
            android:src="@drawable/questions"
            android:backgroundTint="#13FF17"
            android:id="@+id/btn_preguntasFaciles"
            app:maxImageSize="40dp"
            android:layout_gravity="bottom"

            />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAlignBottom="true"
            android:foregroundGravity="bottom"
            android:src="@drawable/canje"
            android:backgroundTint="#FFFFFF"
            android:id="@+id/btn_canje"
            app:maxImageSize="40dp"
            android:layout_gravity="bottom"

            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"

        android:layout_marginBottom="25dp"
        >



    </LinearLayout>


</RelativeLayout>